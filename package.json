{
  "name": "remix-starter-template",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "author": {
    "name": "Franklin Javier",
    "email": "franklinjalves@gmail.com"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && vite build --ssr",
    "start": "remix-serve ./build/index.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "clean": "rm -rf node_modules pnpm-lock.yaml",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "typecheck": "tsc",
    "generate": "plop",
    "test:dev": "jest --watchAll",
    "test": "jest --forceExit --no-cache",
    "type-check": "tsc",
    "updatedeps": "pnpm upgrade -i --latest",
    "prepare": "husky"
  },
  "dependencies": {
    "@remix-run/node": "^2.9.0",
    "@remix-run/react": "^2.9.0",
    "@remix-run/serve": "^2.9.0",
    "@vercel/remix": "^2.9.0",
    "clsx": "2.1.1",
    "isbot": "^5.1.4",
    "lucide-react": "^0.373.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.9.0",
    "@remix-run/eslint-config": "^2.9.0",
    "@remix-run/testing": "^2.9.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.4",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.2",
    "plop": "^4.0.1",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "shell-quote": "^1.8.1",
    "tailwind-merge": "^2.3.0",
    "tailwindcss": "^3.4.3",
    "ts-jest": "29.1.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
